<h3 class="ui header">{{t "forms.i-i-s-vsempoka2-список-барж-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерБаржи
      class=(if (v-get validationModel "номерБаржи" "isInvalid") "error")
      label=(t "forms.i-i-s-vsempoka2-список-барж-e.номерБаржи-caption")
      data-test-i-i-s-vsempoka2-список-барж-e-номерБаржи=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерБаржи" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.производитель
      class=(if (v-get validationModel "производитель" "isInvalid") "error")
      label=(t "forms.i-i-s-vsempoka2-список-барж-e.производитель-caption")
      data-test-i-i-s-vsempoka2-список-барж-e-производитель=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "производитель" "message")}}
  </div>
</form>
